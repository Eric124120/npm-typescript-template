{
    "compilerOptions": {
        "target": "es5", // 编译目标代码为 es5 的，为了兼容更多的浏览器
        "module": "commonjs", // 使用 cjs 模块解析机制
        "declaration": true, // 当打包时，生成类型定义文件
        "strict": true,
        "outDir": "./dist/", // 打包的地址为 ./dist
        "sourceMap": true,
        "noImplicitAny": true,
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["node_modules", "./src/example/*"] // 不编译 node_modules 和 test 文件夹，因为他们只在开发时使用
}